@{
    ViewBag.Title = "Weeather forecast -Home";
}

@model CityViewModel

<h2>This is home page</h2>
<form method="post" asp-controller="App" asp-action="Index" asp-antiforgery="true">
    <div class="from-group">
        <label asp-for="Id"></label>
        <select asp-for="Id" asp-items="Model.ListofCities">
            <option disabled selected value="">Select a Country</option>
        </select>
    </div>
    
    <button type="submit">Get weather</button>

</form>
<div>
    <a asp-controller="App" asp-action="Index">Contact</a>
</div>

